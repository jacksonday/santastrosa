---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import FinalSection from '../components/FinalSection.astro';
import contentData from '../data/content.json';

const { hero, cards, finalSection, seo } = contentData;
---

<Layout 
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
>
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    description={hero.description}
    ctaText={hero.ctaText}
    ctaLink={hero.ctaLink}
  />
  
  <section id="attractions" class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">
        What Makes Santa Rosa Special
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {cards.map((card) => (
          <Card
            title={card.title}
            description={card.description}
            buttonText={card.buttonText}
            buttonLink={card.buttonLink}
            icon={card.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <FinalSection
    heading={finalSection.heading}
    subheading={finalSection.subheading}
    backgroundImage={finalSection.backgroundImage}
  />
</Layout>
