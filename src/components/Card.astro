---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  icon?: string;
}

const { title, description, buttonText, buttonLink, icon } = Astro.props;
---

<article class="bg-white rounded-xl shadow-lg p-6 md:p-8 hover:shadow-2xl transition-shadow duration-300 flex flex-col h-full">
  {icon && (
    <div class="text-5xl mb-4" aria-hidden="true">
      {icon}
    </div>
  )}
  <h3 class="text-2xl font-bold text-gray-900 mb-4">
    {title}
  </h3>
  <p class="text-gray-600 mb-6 flex-grow leading-relaxed">
    {description}
  </p>
  <a 
    href={buttonLink} 
    class="inline-block bg-purple-900 text-white font-semibold px-6 py-3 rounded-lg hover:bg-purple-800 transition duration-300 text-center mt-auto"
  >
    {buttonText}
  </a>
</article>
