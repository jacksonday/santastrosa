---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, description, ctaText, ctaLink } = Astro.props;
---

<section class="relative bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 text-white py-20 md:py-32">
  <div class="absolute inset-0 bg-black opacity-20"></div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4 leading-tight">
        {title}
      </h1>
      <p class="text-xl sm:text-2xl md:text-3xl mb-6 font-light text-purple-200">
        {subtitle}
      </p>
      <p class="text-base sm:text-lg md:text-xl mb-8 text-gray-200 max-w-3xl mx-auto">
        {description}
      </p>
      <a 
        href={ctaLink} 
        class="inline-block bg-white text-purple-900 font-semibold px-8 py-3 rounded-lg hover:bg-purple-100 transition duration-300 transform hover:scale-105 shadow-lg"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
