---
interface Props {
  heading: string;
  subheading: string;
  backgroundImage: string;
}

const { heading, subheading, backgroundImage } = Astro.props;
---

<section 
  class="relative bg-cover bg-center bg-no-repeat py-32 md:py-40"
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('${backgroundImage}');`}
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">
        {heading}
      </h2>
      <p class="text-lg sm:text-xl md:text-2xl font-light">
        {subheading}
      </p>
    </div>
  </div>
</section>
